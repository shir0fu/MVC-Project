@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Task9.Models.Group>

<!doctype html>
<html>
<head>
    <title>TASK 9</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Groups</h1>
    
    @foreach (var item in Model)
    {
        <br><br/>
        <h3><a asp-action="Students" asp-controller="Student" asp-route-id="@item.GroupId">@item.Name</a></h3>
        <a asp-action="EditGroup" asp-controller="Group" asp-route-id="@item.GroupId">Change name</a>

        <form asp-controller="Group" asp-action="Delete" method="post"  asp-route-id="@item.GroupId">
            <input type="submit" value="Delete" />
        </form>
    }
</body>
</html>