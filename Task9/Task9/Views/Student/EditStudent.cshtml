@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Task9.Models.Student

<!doctype html>
<html>
<head>
    <title>TASK 9</title>
    <meta charset="utf-8"/>
</head>

<body>
<h3>Editing student @Model.FirstName</h3>
<form asp-action="EditStudent" asp-controller="Student" asp-route-id="@Model.StudentId">
    <p>
        <label asp-for="FirstName">New name</label><br />
        <input type="text" asp-for="FirstName" />
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>
</form>
</body>
</html>