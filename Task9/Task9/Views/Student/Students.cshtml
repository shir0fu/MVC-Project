@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Task9.Models.Student>

<!doctype html>
<html>
<head>
    <title>TASK 9</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Students</h1>
    
    @foreach (var item in Model)
    {
        <br><br/>
        <h3>@item.FirstName @item.LastName</h3>
        <a asp-action="EditStudent" asp-controller="Student" asp-route-id="@item.StudentId">Change first name</a>

        <form asp-controller="Student" asp-action="Delete" method="post"  asp-route-id="@item.StudentId">
            <input type="submit" value="Delete" />
        </form>
    }
</body>
</html>
